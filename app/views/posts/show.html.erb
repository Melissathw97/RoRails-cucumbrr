<div class="post_content">
  <h1 class="post_title">
    <%= @post.title %>
  </h1>

  <p class="timestamp">
    Posted <%= time_ago_in_words(@post.created_at) %> ago |
    <%= link_to "Edit", edit_post_path(@post) %> |
    <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you wanna delete?" } %>
  </p>

  <p class="post_body">
    <%= @post.body %>
  </p>
</div>
