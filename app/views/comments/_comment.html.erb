<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_name">
      <em><%= comment.name %></em>
    </p>

    <p class="comment_body">
      <%= comment.body %>
    </p>

    <p class="timestamp">
      <%= time_ago_in_words(comment.created_at) %> ago
    </p>
  </div>
</div>