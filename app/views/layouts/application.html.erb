<!DOCTYPE html>
<html>
  <head>
    <title>Cucumbrr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css2?family=Balsamiq+Sans&display=swap' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag "Cucumbrr.png"%>
  </head>

  <body>
    <div id="sidebar">
      <h2 class="sidebar_title"><%= link_to "Cucumbrr", root_path %></h2>
      <p class="sidebar_subtitle">tumblr, but cooler</p>
      <ul>
        <li>
          <%= link_to "Posts", root_path %>
        </li>
        <li>
          <%= link_to "About", about_path %>
        </li>
      </ul>

      <p class="sign_in">Log In</p>
      <p><%= link_to "Sign Up", signup_path %></p>
    </div>

    <div id="main_content">
      <div id="header">
        <% if current_page?(root_path) %>
          <p>Post Feed</p>
        <% elsif current_page?(about_path) %>
          <p>My site</p>
        <% else %>
          <%= link_to "< Back to Post Feed", root_path %>
        <% end %>
        <div class="buttons">
          <button class="button">
            <%= link_to "Make Post", new_post_path %>
          </button>
          <button class="button">
            Log Out
          </button>
        </div>
      </div>

      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert") %>
      <% end %>

      <%= yield %>
  
    </div>

  </body>
</html>
